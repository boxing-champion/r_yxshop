@import "../../common/stylus/mixins.styl"
.xxx
  width: 100%
  height 100%
  overflow hidden
  .middle
    bottom-border-1px(#ddd)
    margin: 0
    height: 1.17333rem;
    padding: 0 .4rem;
    line-height: 1.17333rem;
    text-align: center;
    background-color: #fff;
    .header
      position: relative;
      .title
        font-size: .48rem;
      .right
        display: block;
        position: absolute;
        color: #B4282D;
        font-size: .4rem;
        right: .35rem;
        top: 0;
        > a
          color: #B4282D;

  .content
    background: #f4f4f4;
    width: 100%;
    .m-servicePolicy
      position: relative;
      z-index: 1;
      height: .93333rem;
      display flex
      flex-flow: row nowrap;
      justify-content: space-between;
      padding: 0 .4rem;
      >li
        line-height .93333rem;
        .u-icon
          font-size 12px
        .txt
          color #666


    .m-defaultPage
      width: 100%
      .container
        width 100%
        height 11rem
        position relative
        .img
          width: 248px
          height: 248px
          position absolute
          top: 0
          left: 0
          right: 0
          bottom: 0
          margin auto
        .down
          position absolute
          left: 2.1333333rem
          bottom: 0
          zoom: 1
          .one
            display block
            margin-bottom: .66667rem;
            line-height: 1;
            font-size: .37333rem;
            text-align center
            color: #999;
          .two
            display block
            margin: auto;
            width: 6.4rem;
            height: 1.22667rem;
            font-size: .4rem;
            line-height: 1.22667rem;
            text-align center
            color: #fff;
            background-color: #b4282d;
            border-radius: .04rem;